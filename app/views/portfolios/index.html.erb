<h1>Portfolio items</h1>

<%= link_to 'Create a new Portfolio item', new_portfolio_path %> 

<% @portfolio_items.each do |portfolio_item|%>
  <div>
    <h3>
      <span class="thumb-image"><%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil? %></span>
      <%= portfolio_item.title %>
    </h3>
    <p><%= portfolio_item.subtitle %></p>
    <span><%= portfolio_item.body %></span>
    <%= image_tag portfolio_item.main_image if !portfolio_item.main_image.nil? %>
    <%= link_to 'Edit this Portfolio item', edit_portfolio_path(portfolio_item) %> 
  </div>
<% end %>
